<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".PlumberActivtiy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/paint" />

        <TextView
            android:id="@+id/nameTextView"
            android:textColor="@color/DarkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr. Zayn Malik"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:gravity="center" />
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transform your spaces with the artistic touch of Zayn Malik, a painter who turns walls into masterpieces. With a keen eye for detail and a passion for creativity, Zayn guarantees perfection in every stroke. From modern designs to timeless elegance, your vision comes to life. Choose Zayn Malik and let art redefine your surroundings!"
            android:textSize="20dp"
            android:textColor="@color/DarkGray"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/contactTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Contact                         +923904256734"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/Orange"
            android:layout_marginTop="50dp"
            android:gravity="center" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>